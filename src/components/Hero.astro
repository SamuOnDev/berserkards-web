---
import heroImage from "../assets/hero2.png";

const { messages } = Astro.props;
---

<section id="inicio" class="mx-auto max-w-6xl px-4 pt-10">
  <div
    class="relative overflow-hidden rounded-card border border-border bg-surface bg-cover bg-center"
    style={`background-image: url(${heroImage.src});`}
    role="img"
    aria-label={messages.hero.imageLabel}
  >
    <div
      class="absolute inset-0 bg-[radial-gradient(900px_420px_at_50%_0%,rgba(224,69,90,0.2),transparent_70%)]"
      aria-hidden="true"
    ></div>
    <div
      class="absolute inset-0 bg-[linear-gradient(180deg,rgba(11,13,16,0.75)_0%,rgba(11,13,16,0.2)_55%,rgba(11,13,16,0.9)_100%)]"
      aria-hidden="true"
    ></div>
    <div class="relative px-6 py-16 text-center sm:px-12 sm:py-20">
      <div class="mx-auto inline-flex max-w-md items-center justify-center rounded-full border border-border/60 bg-base/60 px-4 py-2 text-xs uppercase tracking-[0.2em] text-muted">
        {messages.hero.badge}
      </div>

      <h1 class="mx-auto mt-6 max-w-2xl text-3xl font-semibold leading-tight text-text sm:text-4xl lg:text-5xl">
        {messages.hero.title}
      </h1>

      <p class="mx-auto mt-4 max-w-xl text-sm text-muted sm:text-base">
        {messages.hero.subtitle}
      </p>

      <div class="mt-8 flex justify-center">
        <a
          href="#one-piece"
          class="inline-flex items-center justify-center rounded-btn bg-accent px-8 py-3 text-sm font-semibold uppercase tracking-[0.2em] text-white shadow-[0_12px_30px_rgba(224,69,90,0.35)] transition hover:bg-accent-2"
        >
          {messages.hero.ctaPrimary}
        </a>
      </div>

    </div>
  </div>
</section>
