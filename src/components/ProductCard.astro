---
import productImages from "../data/productImages.json";

const { product, actions, placeholder } = Astro.props;
const isSoldOut = product.status.toLowerCase().includes("agotado") || product.status.toLowerCase().includes("sold");
const imageFile = productImages.items[product.imageKey];
const imageSrc = imageFile ? `${productImages.basePath}/${imageFile}` : null;
---

<article class="group flex flex-col overflow-hidden rounded-card border border-accent/40 bg-surface/80 shadow-[0_0_0_1px_rgba(224,69,90,0.15)] transition duration-300 hover:-translate-y-1 hover:shadow-[0_20px_60px_-45px_rgba(233,60,72,0.6)]">
  <div class="relative">
    <div class="absolute left-3 top-3 z-10 inline-flex items-center gap-2 rounded-full border border-border/60 bg-base/70 px-3 py-1 text-[0.65rem] uppercase tracking-[0.2em] text-muted">
      {product.badge}
    </div>

    <div class="flex aspect-[4/3] items-center justify-center overflow-hidden bg-[radial-gradient(320px_200px_at_50%_35%,rgba(255,255,255,0.12),transparent_70%)]">
      {
        imageSrc ? (
          <img
            src={imageSrc}
            alt={product.title}
            loading="lazy"
            class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
          />
        ) : (
          <span class="px-4 text-center text-[0.65rem] uppercase tracking-[0.25em] text-muted">
            {placeholder}
          </span>
        )
      }
    </div>

    <div class="absolute bottom-3 left-3 right-3 flex items-center justify-between">
      <span
        class={`rounded-full px-3 py-1 text-[0.65rem] font-semibold uppercase tracking-[0.2em] ${
          isSoldOut ? "border border-border/70 bg-base/70 text-muted" : "bg-accent text-white"
        }`}
      >
        {product.status}
      </span>
    </div>
  </div>

  <div class="flex flex-1 flex-col gap-3 px-4 pb-5 pt-4">
    <div class="flex items-start justify-between gap-3">
      <h3 class="text-sm font-semibold">{product.title}</h3>
      <span class="rounded-full border border-border/60 px-2 py-1 text-[0.55rem] uppercase tracking-[0.2em] text-muted">
        {product.tag}
      </span>
    </div>

    <div class="mt-auto flex items-center justify-between text-xs uppercase tracking-[0.2em]">
      <a href="#" class="text-muted transition group-hover:text-text">
        {actions.view}
      </a>
      <a
        href="#"
        class={`rounded-full px-3 py-2 text-[0.65rem] font-semibold uppercase tracking-[0.2em] ${
          isSoldOut ? "border border-border/70 bg-base/60 text-muted" : "bg-accent text-white hover:bg-accent-2"
        }`}
      >
        {actions.add}
      </a>
    </div>
  </div>
</article>
